        */
        var request = {
            userId: userid
        }
        $.ajax({
            url: "/posts/user",
            type: "post",
            data: request,
            success: function(data){
                for(var i = 0;i < data.length;i++){
                var newPost = $(`
                    <div class="card">
                        <div class="row">
                            <div class="col-md-4">
                                <img src="${data[i].user.picture}" class="card-img" alt="${data[i].picture}"/>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-title">
                                        ${data[i].title}
                                    </h3>
                                    <div class="card-text">
                                        <h3>${data[i].body}</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>`)
                $("#posts").append(newPost);
            }
            },
            dataType: "json"
        })
    }
</script>
